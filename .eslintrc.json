{
    "parser": "@typescript-eslint/parser",
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:prettier/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-console": "off",
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            {
                "code": 150
            }
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "import/extensions": [
            "error",
            "ignorePackages"
        ],
        "import/prefer-default-export": "off"
    }
}
